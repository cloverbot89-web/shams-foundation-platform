generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Enums ───────────────────────────────────────────────────────────────────

enum UserRole {
  ADMIN
  COORDINATOR
  CONTRIBUTOR
  VIEWER
}

enum TeamMemberRole {
  LEAD
  MEMBER
}

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskCategory {
  FUNDRAISING
  OUTREACH
  PROGRAM
  RESEARCH
  ADMIN
  OTHER
}

enum ActivityType {
  TASK_CREATED
  TASK_UPDATED
  TASK_COMPLETED
  COMMENT_ADDED
  FILE_UPLOADED
  MEMBER_JOINED
  STATUS_CHANGED
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

enum DonationSource {
  MANUAL
  MERCURY
}

enum NotificationType {
  TASK_ASSIGNED
  MENTIONED
  DEADLINE_APPROACHING
  COMMENT_REPLY
  TEAM_INVITE
}

enum ChatMessageRole {
  USER
  ASSISTANT
}

// ─── NextAuth Models ─────────────────────────────────────────────────────────

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── Application Models ──────────────────────────────────────────────────────

model User {
  id            String    @id @default(uuid()) @db.Uuid
  email         String    @unique
  name          String
  avatarUrl     String?   @map("avatar_url")
  role          UserRole  @default(CONTRIBUTOR)
  invitedById   String?   @map("invited_by_id") @db.Uuid
  inviteToken   String?   @unique @map("invite_token")
  lastLoginAt   DateTime? @map("last_login_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // NextAuth fields
  emailVerified DateTime? @map("email_verified")
  image         String?

  invitedBy         User?          @relation("UserInvites", fields: [invitedById], references: [id], onDelete: SetNull)
  invitees          User[]         @relation("UserInvites")
  assignedTasks     Task[]         @relation("TaskAssignee")
  createdTasks      Task[]         @relation("TaskCreator")
  comments          Comment[]
  activities        Activity[]
  uploadedFiles     File[]
  createdTeams      Team[]
  teamMemberships   TeamMember[]
  createdCampaigns  Campaign[]
  recordedDonations Donation[]
  notifications     Notification[]
  chatMessages      ChatMessage[]
  accounts          Account[]
  sessions          Session[]

  @@map("users")
}

model Team {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  description String?
  createdById String   @map("created_by_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  createdBy  User         @relation(fields: [createdById], references: [id], onDelete: Cascade)
  members    TeamMember[]
  tasks      Task[]
  activities Activity[]

  @@map("teams")
}

model TeamMember {
  id       String         @id @default(uuid()) @db.Uuid
  teamId   String         @map("team_id") @db.Uuid
  userId   String         @map("user_id") @db.Uuid
  role     TeamMemberRole @default(MEMBER)
  joinedAt DateTime       @default(now()) @map("joined_at")

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@map("team_members")
}

model Task {
  id           String       @id @default(uuid()) @db.Uuid
  title        String
  description  String?
  status       TaskStatus   @default(NOT_STARTED)
  priority     TaskPriority @default(MEDIUM)
  category     TaskCategory @default(OTHER)
  dueDate      DateTime?    @map("due_date")
  assigneeId   String?      @map("assignee_id") @db.Uuid
  createdById  String       @map("created_by_id") @db.Uuid
  teamId       String?      @map("team_id") @db.Uuid
  parentTaskId String?      @map("parent_task_id") @db.Uuid
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  assignee   User?     @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  createdBy  User      @relation("TaskCreator", fields: [createdById], references: [id], onDelete: Cascade)
  team       Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  parentTask Task?     @relation("TaskSubtasks", fields: [parentTaskId], references: [id], onDelete: SetNull)
  subtasks   Task[]    @relation("TaskSubtasks")
  comments   Comment[]
  activities Activity[]
  files      File[]

  @@map("tasks")
}

model Comment {
  id              String   @id @default(uuid()) @db.Uuid
  content         String
  taskId          String   @map("task_id") @db.Uuid
  authorId        String   @map("author_id") @db.Uuid
  parentCommentId String?  @map("parent_comment_id") @db.Uuid
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  task          Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parentComment Comment? @relation("CommentThread", fields: [parentCommentId], references: [id], onDelete: SetNull)
  replies       Comment[] @relation("CommentThread")

  @@map("comments")
}

model Activity {
  id          String       @id @default(uuid()) @db.Uuid
  type        ActivityType
  description String
  userId      String       @map("user_id") @db.Uuid
  taskId      String?      @map("task_id") @db.Uuid
  teamId      String?      @map("team_id") @db.Uuid
  metadata    Json?
  createdAt   DateTime     @default(now()) @map("created_at")

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)
  team Team? @relation(fields: [teamId], references: [id], onDelete: SetNull)

  @@map("activities")
}

model File {
  id           String   @id @default(uuid()) @db.Uuid
  filename     String
  storageKey   String   @map("storage_key")
  mimeType     String   @map("mime_type")
  sizeBytes    Int      @map("size_bytes")
  taskId       String?  @map("task_id") @db.Uuid
  uploadedById String   @map("uploaded_by_id") @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")

  task       Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)
  uploadedBy User  @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@map("files")
}

model Campaign {
  id            String         @id @default(uuid()) @db.Uuid
  name          String
  description   String?
  goalAmount    Decimal        @map("goal_amount") @db.Decimal(18, 2)
  currentAmount Decimal        @default(0) @map("current_amount") @db.Decimal(18, 2)
  status        CampaignStatus @default(ACTIVE)
  startDate     DateTime       @map("start_date")
  endDate       DateTime?      @map("end_date")
  createdById   String         @map("created_by_id") @db.Uuid
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  createdBy User       @relation(fields: [createdById], references: [id], onDelete: Cascade)
  donations Donation[]

  @@map("campaigns")
}

model Donation {
  id                   String         @id @default(uuid()) @db.Uuid
  amount               Decimal        @db.Decimal(18, 2)
  donorName            String         @map("donor_name")
  donorEmail           String?        @map("donor_email")
  campaignId           String         @map("campaign_id") @db.Uuid
  source               DonationSource @default(MANUAL)
  mercuryTransactionId String?        @unique @map("mercury_transaction_id")
  notes                String?
  recordedById         String         @map("recorded_by_id") @db.Uuid
  donatedAt            DateTime       @map("donated_at")
  createdAt            DateTime       @default(now()) @map("created_at")

  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  recordedBy User     @relation(fields: [recordedById], references: [id], onDelete: Cascade)

  @@map("donations")
}

model Notification {
  id        String           @id @default(uuid()) @db.Uuid
  userId    String           @map("user_id") @db.Uuid
  type      NotificationType
  title     String
  message   String
  linkUrl   String?          @map("link_url")
  read      Boolean          @default(false)
  createdAt DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model ChatMessage {
  id              String          @id @default(uuid()) @db.Uuid
  userId          String          @map("user_id") @db.Uuid
  sessionId       String          @map("session_id")
  role            ChatMessageRole
  content         String
  sourceCitations Json?           @map("source_citations")
  createdAt       DateTime        @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}
